@page "/number"
@using Randomize.Core.Services
@inject NumberRandomizerService NumberService

<h3>Number Randomizer</h3>

<div class="row">
    <div class="col">
        <input class="form-control" type="number" @bind="min" placeholder="Min" />
    </div>
    <div class="col">
        <input class="form-control" type="number" @bind="max" placeholder="Max" />
    </div>
</div>
<button class="btn btn-primary mt-2" @onclick="Randomize">Randomize</button>

@if (result is not null)
{
    <p class="mt-3"><strong>🎲 Result:</strong> @result</p>
}

@code {
    int min = 1;
    int max = 100;
    int? result;

    void Randomize()
    {
        if (min > max) (min, max) = (max, min);
        result = NumberService.PickRandom(min, max);
    }
}
