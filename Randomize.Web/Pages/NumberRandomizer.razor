@page "/number"
@using Randomize.Core.Services
@inject NumberRandomizerService NumberService

<div class="content">
    <h3>Number Randomizer</h3>

    <div class="row">
        <div class="col">
            <input class="textfield-num" type="number" @bind="min" placeholder="Min" />
        </div>
        <div class="col">
            <input class="textfield-num" type="number" @bind="max" placeholder="Max" />
        </div>
    </div>
    <button class="button-main" @onclick="Randomize">Randomize</button>


</div>
@if (result is not null)
{
    <p class="content p"><strong>🎲 Result:</strong> @result</p>
}

@code {
    int min = 1;
    int max = 100;
    int? result;

    void Randomize()
    {
        if (min > max) (min, max) = (max, min);
        result = NumberService.PickRandom(min, max);
    }
}
