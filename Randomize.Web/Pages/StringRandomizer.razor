@page "/string"
@using Randomize.Core.Services
@inject StringRandomizerService StringService

<div class="content">
    <h2>String Randomizer</h2>
    
    <textarea class="textfield-main" rows="5" @bind="inputText" placeholder="Enter items, one per line"></textarea>
    <button class="button-main" @onclick="Randomize">Randomize</button>
</div>
@if (!string.IsNullOrWhiteSpace(result))
{
    <p class="content p"><strong>🎲 Result: </strong> @result</p>
}

@code {
    string inputText = "";
    string? result;

    void Randomize()
    {
        var list = inputText.Split('\n', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        result = StringService.PickRandom(list);
    }
}